<h1>New Advertisement</h1>

 <div class="row">
    <div class="col-md-4">
     <p>Guidelines for advertisements</p>
      <ul>
        <li>Please enter price to the nearest full dollar amount.</li>
        <li>Inappropriate ads will get you banned.</li>
      </ul>
    </div>
    <div class="col-md-8">
      <%= form_for @advertisement do |f| %>
        <div class="form-group">

          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control', placeholder: "Enter Advertisement Title" %>
        </div>
        <div class="form-group">
          <%= f.label :body %>
          <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter the Body of your Advertisement" %>
        </div>
        <div class="form-group">
          <%= f.label :price %>
          <%= f.number_field :price, value: number_to_currency(f.object.price.to_f, delimiter: '', unit: ''), step: 1, class: 'form-control', placeholder: "Enter price"%>
        </div>
        <div class="form-group">
          <%= f.submit "Save", class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
